<div class="container">
  <div class="row">
    <div class="col-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Makale Tarihi</th>
            <th scope="col">Makale Başlık</th>
            <th scope="col">Makale Katagori</th>
            <th scope="col">İçerik</th>
            <th scope="col">Sil</th>
          </tr>
        </thead>
        <tbody>
          <% allPost.forEach(element => { %>
          <tr>
            <td class="align-middle">
              <img
                src="<%= element.articleImg %>"
                width="100"
                height="80"
                alt=""
                srcset=""
              />
            </td>
            <td class="align-middle"><%= element.articleTitle %></td>
            <td class="align-middle"><%= element.articleCatagory%></td>
            <td class="align-middle">
              <a href="all-posts/<%=element._id %>" class="link-success"
                >Detay</a
              >
            </td>
            <td class="align-middle">
              <form action="all-posts/<%=element._id %>" method="post">
                <button type="submit" class="btn btn-sm btn-danger">
                  <i class="fa fa-trash text-white" aria-hidden="true"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
